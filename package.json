{
  "name": "altava-staking",
  "version": "1.0.0",
  "description": "ALTAVA Locked Staking for third-party token reward",
  "main": "index.js",
  "author": "cui",
  "license": "MIT",
  "scripts": {
    "build": "npx hardhat compile --config ./hardhat.config.js",
    "profile": "REPORT_GAS=true npx hardhat test --config ./hardhat.config.js",
    "coverage": "npx hardhat coverage --solcoverjs ./.solcover.js",
    "compile": "npx hardhat compile",
    "test0": "npx hardhat test ./test/0_nftstaking.js",
    "test1": "npx hardhat test ./test/1_nftchef.js",
    "test2": "npx hardhat test ./test/2_smartchef.js",
    "test": "npx hardhat test",
    "lint:check:solhint": "solhint --config ./.solhint.json --ignore-path ./.solhintignore contracts/**/*.sol",
    "deploy:hardhat": "npx hardhat run scripts/testnet/deploy.js",
    "deploy:local": "npx hardhat run scripts/testnet/deploy_local.js --network testnet",
    "deploy:testnet": "npx hardhat run scripts/testnet/deploy.js --network testnet",
    "deploy:goerli": "npx hardhat run scripts/testnet/deploy.js --network goerli",
    "deploy:rinkeby": "npx hardhat run scripts/testnet/deploy.js --network rinkeby",
    "deploy:mainnet": "npx hardhat run scripts/mainnet/deploy.js --network mainnet",
    "verify:rinkeby": "npx hardhat verify --network rinkeby DEPLOYED_CONTRACT_ADDRESS 'Constructor argument 1'"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/providers": "^5.7.1",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomicfoundation/hardhat-toolbox": "^2.0.0",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/contracts": "^4.8.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.3",
    "chai": "^4.3.6",
    "dotenv": "^16.0.2",
    "ethers": "^5.7.1",
    "hardhat": "^2.11.2",
    "hardhat-gas-reporter": "^1.0.9",
    "solidity-coverage": "^0.8.2",
    "typechain": "^8.1.0"
  }
}
